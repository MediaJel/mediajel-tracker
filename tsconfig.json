{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["es5", "es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "/*": ["*"] // Must follow ParcelJS dep resolution @{link https://parceljs.org/features/dependency-resolution/}
    }
  },
  "include": ["src/**/*", "server/**/*", "cypress/**/*"],
  "exclude": ["node_modules/*"]
}
