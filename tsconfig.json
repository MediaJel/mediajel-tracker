{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["es5", "es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"] // Must follow ParcelJS dep resolution @{link https://parceljs.org/features/dependency-resolution/}
    }
  },
  "include": ["src/**/*", "server/**/*", "cypress/**/*"],
  "exclude": ["node_modules/*"]
}
