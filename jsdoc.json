{
  "opts": {
    "template": "./node_modules/better-docs",
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true
  },
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "node_modules/better-docs/category",
    "node_modules/better-docs/typedef-import"
  ],
  "docdash": {
    "static": true,
    "sort": true,
    "meta": {
      "title": "Mediajel Tracker",
      "description": "Open-source opinionated Snowplow implementation to tracking multiple environments"
    },
    "search": true,
    "menu": {
      "Mediajel": {
        "href": "https://mediajel.com",
        "target": "_blank",
        "class": "menu-item"
      }
    }
  },
  "templates": {
    "search": true,
    "better-docs": {
      "name": "Mediajel Tracker",
      "title": "Mediajel Tracker",
      "navLinks": [
        {
          "label": "Mediajel",
          "href": "https://mediajel.com"
        }
      ]
    }
  }
}
