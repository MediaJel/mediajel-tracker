{
  "opts": {
    "template": "./node_modules/docdash",
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true
  },
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "docdash": {
    "static": true,
    "sort": true,
    "meta": {
      "title": "Mediajel Tracker",
      "description": "Open-source opinionated Snowplow implementation to tracking multiple environments"
    },
    "search": true,
    "menu": {
      "Mediajel": {
        "href": "https://mediajel.com",
        "target": "_blank",
        "class": "menu-item"
      }
    }
  }
}
