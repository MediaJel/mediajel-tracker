{
  "opts": {
    "template": "./node_modules/clean-jsdoc-theme",
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true
  },
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src", "package.json", "README.md"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "node_modules/better-docs/category",
    "node_modules/better-docs/typedef-import",
    "plugins/markdown"
  ],
  "docdash": {
    "static": true,
    "sort": true,
    "meta": {
      "title": "Mediajel Tracker",
      "description": "Open-source opinionated Snowplow implementation to tracking multiple environments"
    },
    "search": true,
    "menu": {}
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  },
  "templates": {
    "search": true,
    "better-docs": {
      "name": "Mediajel Tracker",
      "title": "Mediajel Tracker",
      "navLinks": [
        {
          "label": "Mediajel",
          "href": "https://mediajel.com"
        }
      ]
    }
  }
}
